@{
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>COLMUSIC - Đăng ký</title>
    <link rel="icon" href="~/image/logo.jpg" type="image/png" />
    <link rel="stylesheet" href="~/Content/logincss.css" />
    <link rel="stylesheet" href="~/fonts/fontawesome-free-6.2.0-web/css/all.min.css" />


    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: black;
            margin: 0;
            padding: 0;
        }

        .content-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .signup-wrapper {
            display: flex;
            width: 80%;
            max-width: 1000px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        }

        .company-details {
            background-color: #2a2a2a;
            color: #fff;
            width: 40%;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .signup-form {
            width: 60%;
            background-color: #fff;
            padding: 40px;
        }

        .form-title {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .content-item {
            margin-bottom: 20px;
        }

            .content-item label {
                font-weight: 600;
            }

            .content-item input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                margin-top: 10px;
            }

        .centered-button {
            text-align: center;
        }

        .btn-login, .btn-signup {
            background-color: #2a2a2a;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-login:hover, .btn-signup:hover {
                background-color: #444;
            }

        .error-message {
            color: red;
            margin-bottom: 15px;
        }

        .success-message {
            color: green;
            margin-bottom: 15px;
        }

        .signup-text, .login-text {
            text-align: center;
            margin-top: 20px;
        }

        .signup-link, .login-link {
            color: #2a2a2a;
            font-weight: 600;
            text-decoration: none;
        }
    </style>

</head>
<body>
    <div class="content-wrapper">
        <div class="content">
            <div class="signup-wrapper shadow-box">
                <div class="company-details">
                    <div class="shadow"></div>
                    <div class="wrapper-1">
                        <a href="/Home/Index" style="text-decoration: none;">
                            <div class="logo">
                                <i class="fa-solid fa-music fa-3x"></i>
                            </div>
                            <h1 class="title">NGHE NHẠC</h1>
                            <div class="slogan">Mang lại trải nghiệm mới về âm nhạc</div>
                        </a>
                    </div>
                </div>
                <div class="signup-form">
                    <div class="wrapper-2">
                        <div class="form-title">Đăng ký ngay hôm nay</div>
                        @if (ViewBag.erro != null)
                        {
                            <div class="error-message">@ViewBag.erro</div>
                        }
                        @if (ViewBag.Success != null)
                        {
                            <div class="success-message">@ViewBag.Success</div>
                        }
                        <div class="form">
                            <form method="post" action="/login/SignUp">
                                <p class="content-item">
                                    <label>Email</label>
                                    <input type="email" placeholder="Vui lòng nhập email" name="email" required />
                                </p>

                                <p class="content-item">
                                    <label>Mật khẩu</label>
                                    <input type="password" placeholder="Vui lòng nhập mật khẩu" name="psw" required />
                                </p>

                                <p class="content-item">
                                    <label>Tên</label>
                                    <input type="text" placeholder="Điền tên sẽ hiện trong hồ sơ của bạn" name="ten" required />
                                </p>

                                <div class="centered-button">
                                    <button type="submit" class="btn-signup">Đăng ký</button>
                                </div>
                                <p class="login-text">
                                    Bạn đã có tài khoản?
                                    <a href="/login/Login" class="login-link">Đăng nhập ngay</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" />
</body>
</html>
